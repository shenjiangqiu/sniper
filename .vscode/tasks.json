{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher":"$gcc"
        },
        {
            "label":"mytest_pause",
            "type": "shell",
            "command" :"make",
            "args": [
                "run-roipause"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test/mytest"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }


        },
        {
            
            "label":"test_normal",
            "type": "shell",
            "command" :"make",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test/mytest"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }

        },
        {
            
            "label":"test_branch",
            "type": "shell",
            "command" :"make",
            "args": [
                "run-branchflag"
            ],
            "options": {
                "cwd": "${workspaceFolder}/test/mytest"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }

        }
    ]
}